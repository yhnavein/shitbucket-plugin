{
  "manifest_version": 3,
  "name": "Shitbucket",
  "version": "1.0.0",
  "description": "Turns Bitbucket into Shitbucket by swapping the boring logo for a gloriously unprofessional turd.",
  "icons": {
    "16": "icons/bb-favicon.png",
    "32": "icons/bb-favicon.png",
    "48": "icons/bb-favicon.png",
    "128": "icons/bb-favicon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.bitbucket.org/*"
      ],
      "js": [
        "shitbucket.js"
      ],
      "css": [
        "shitbucket.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/bb-favicon.png"
      ],
      "matches": [
        "*://*.bitbucket.org/*"
      ]
    }
  ]
}
